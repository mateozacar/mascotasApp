<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/border_layout_adapter">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servicio"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"/>


        <EditText
            android:id="@+id/etNombreServicio_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre mascota"/>

        <EditText
            android:id="@+id/etTipoServicio_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo mascota"/>

        <EditText
            android:id="@+id/etDescripcionServicio_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripcion"/>

        <Button
            android:id="@+id/btnAguardarServicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asignar"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvNombreMascotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"></androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>




</LinearLayout>